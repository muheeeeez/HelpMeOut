{
  "manifest_version": 3,
  "name": "HelpMeOut",
  "version": "1.0.0",
  "description": "This extension helps you record and share help videos with ease.",
  "icons": {
    "16": "images/12.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/12.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
 
  "host_permissions": ["http://*/", "https://*/"],
  "permissions": ["scripting", "tabs", "activeTab"]
}
